# Stripe Configuration (Test Mode)
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
# Get webhook secret from: stripe listen --forward-to localhost:8000/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/payments_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=50

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_LOCK_TIMEOUT=30

# Message Queue Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Application Configuration
APP_NAME=payment-systems
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Payment Processing
PAYMENT_RETRY_MAX_ATTEMPTS=5
PAYMENT_RETRY_BASE_DELAY=1
IDEMPOTENCY_CACHE_TTL=86400

# Reconciliation
RECONCILIATION_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Security
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
